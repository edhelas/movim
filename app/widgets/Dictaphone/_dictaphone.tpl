<div id="dictaphone_widget">
    <ul class="list">
        <li>
            <span id="record" class="primary icon color red bubble active">
                <i class="material-icons">fiber_manual_record</i>
            </span>
            <span id="play_pause" class="primary icon active">
                <i class="material-icons">play_arrow</i>
            </span>
            <span id="audio_upload" class="control icon active">
                <i class="material-icons">send</i>
            </span>
            <div>
                <p class="rec icon red"></p>
                <p id="timer"></p>
                <audio></audio>
                <input type="range" min="0" max="100" step="0.1" value="0">
            </div>
        </li>
    </ul>
</div>